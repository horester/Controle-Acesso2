

@model ControleAcesso.Models.visitantes


@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/site.css">
<div class="text-center" id="max_tower_titulo">
    <h3 class="display-"> Cadastro de Acesso Max Tower </h3>
    <p> Desenvolvedor Horester Teixeira <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@using (Html.BeginForm())
{




    <div class="row">
        <div class="col-md-4">
            <form action="">
                <div class="form-group">
                    <label class="control-label" for="Nome">
                        Nome:
                    </label>
                    <input class="form-control" type="text" id="Nome" name="Nome">
                </div>

                <div class="form-group">
                    <label class="control-label" for="telefone_id">
                        Telefone:
                    </label>

                    <input class="form-control" type="tel" id="Telefone" name="Telefone">
                </div>




                <div class="form-group">
                    <label class="control-label" for="cpf_id">
                        CPF:
                    </label>
                    <input class="form-control" type="number" id="CPF" name="CPF">
                </div>

                <div class="form-group">
                    <label class="control-label" for="rg_id">
                        RG:
                    </label>


                    <input class="form-control" type="number" id="RG" name="RG">
                </div>


                <div class="form-group">
                    <label class="control-label" for="e-mail_id">
                        E-mail:
                    </label>
                    <input class="form-control" type="email" id="email" name="email">
                </div>


                <div class="form-group">
                    <label class="control-label" for="sala_id">
                        Sala:
                    </label>
                    <input class="form-control" type="number" id="Sala" name="Sala">
                </div>


                <div class="form-group">
                    <label class="control-label" for="mensagem2_id">
                        OBS:
                    </label>

                    <textarea class="form-control" id="Oberservacao" name="Oberservacao" cols="30" rows="10"></textarea>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary" type="submit" value="Index">Salvar Cadastro !!</button>

                </div>
                <p>
                    <a asp-controller="visitantes" asp-action="Index">Voltar</a>
                </p>
            </form>
        </div>
    </div>


}

